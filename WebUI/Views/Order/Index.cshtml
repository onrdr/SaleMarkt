
@{
    ViewData["Title"] = "Order List";
}

<div class="container">
    <div class="card border-1 rounded mt-4">
        <div class="card-header rounded bg-info text-white ">
            <div class="row">
                <div class="">
                    <h2 class="py-2">Order List</h2>
                </div> 
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between pb-5 pt-2">
                <span></span>
                <div>
                    <a id="pending" class="btn rounded border border-1" onclick="loadData('pending', 'Pending')">Pending</a>
                    <a id="completed" class="btn rounded border border-1" onclick="loadData('completed', 'Completed')">Completed</a>
                    <a id="approved" class="btn rounded border border-1" onclick="loadData('approved', 'Approved')">Approved</a>
                    <a id="all" class="btn btn-info rounded border border-1 text-white" onclick="loadData('all', '')">All</a>
                </div>
            </div>
            <div class="table-responsive"> 
                <table id="tblOrder" class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Order Status</th> 
                            <th>Payment Status</th> 
                            <th>Order Total</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}