@model RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="renderCard">
    <div class="card shadow border-0 rounded offset-2 col-8">
        <div class="card-header">
            <div class="row mt-2 text-center">
                <h2 class="text-info">Register</h2>
            </div>
        </div>
        <div class="card-body p-0">
            <form method="post" asp-controller="Home" asp-action="Register">
                <div class="border p-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="FullName" class="form-control border-0 shadow rounded" />
                                <label asp-for="FullName" class="ms-0"></label>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input id="emailInput" asp-for="Email" class="form-control border-0 shadow rounded" />
                                <label asp-for="Email" class="ms-0"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="Password" class="form-control border-0 shadow rounded" />
                                <label asp-for="Password" class="ms-0"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="ConfirmPassword" class="form-control border-0 shadow rounded" />
                                <label asp-for="ConfirmPassword" class="ms-0"></label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="PhoneNumber" class="form-control border-0 shadow rounded" />
                                <label asp-for="PhoneNumber" class="ms-0"></label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="Country" class="form-control border-0 shadow rounded" />
                                <label asp-for="Country" class="ms-0"></label>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-floating py-2 col-12 mb-3">
                            <input asp-for="Address" class="form-control border-0 shadow rounded" />
                            <label asp-for="Address" class="ms-0"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="City" class="form-control border-0 shadow rounded" />
                                <label asp-for="City" class="ms-0"></label>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="PostalCode" class="form-control border-0 shadow rounded" />
                                <label asp-for="PostalCode" class="ms-0"></label>
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 mb-3">
                        <div class="col-6">
                            <button id="submitButton" type="submit" class="form-control btn btn-info shadow rounded">Register</button>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <p class="text-info">Already have an Account? <a asp-controller="Home" asp-action="Login">Login here</a></p>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{
            <partial name="_ValidationScriptsPartial" />

            // <script src="~/js/account.js"></script>
        }
    }
