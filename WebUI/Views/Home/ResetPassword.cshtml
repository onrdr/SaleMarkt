@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Password Reset";
}

@if (ViewBag.status == "success")
{
    <div class="row mt-5">
        <div class="col-4 offset-4">
            <p class="alert alert-success">
                A link to change your password has been send to your mail address.
            </p>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-4 offset-4">
            <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
            <p class="alert alert-info">
                Enter the e-mail address you used when you signed up below,
                and we'll send you your login name and instructions on how to reset your password.
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-4 offset-4">
            <form method="post">
                <div class="form-group mt-2">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Send" class="btn btn-primary col-4" />
                    <a class="btn btn-danger" asp-controller="Home" asp-action="ResetPasswordConfirm">Reset Confirm Page</a>
                </div>
            </form>
        </div>
    </div>
}

