@model UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="card shadow border-0 rounded mt-4 p-0 offset-2 col-8">
    <div class="card-header">
        <div class="row mt-2 text-center">
            <h2 class="text-warning">User Details</h2>
        </div>
    </div>
    <div class="card-body p-3">
        <form method="post" asp-controller="User" asp-action="Details">
            <div class="row">
                <div class="border-0 p-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="Name" class="form-control border-0 shadow rounded" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <label asp-for="Name" class="ms-0"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input id="emailInput" asp-for="Email" class="form-control border-0 shadow rounded" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <label asp-for="Email" class="ms-0"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="PhoneNumber" class="form-control border-0 shadow rounded" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                <label asp-for="PhoneNumber" class="ms-0"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="Address" class="form-control border-0 shadow rounded" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <label asp-for="Address" class="ms-0"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="City" class="form-control border-0 shadow rounded" />
                                <span asp-validation-for="City" class="text-danger"></span>
                                <label asp-for="City" class="ms-0"></label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="Country" class="form-control border-0 shadow rounded" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                                <label asp-for="Country" class="ms-0"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="PostalCode" class="form-control border-0 shadow rounded"></input>
                                <label asp-for="PostalCode" class="ms-0"></label>
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-6">
                            <button id="submitButton" type="submit" class="form-control btn btn-outline-warning shadow">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

       // <script src="~/js/account.js"></script>
    }
}